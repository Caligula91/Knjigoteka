extends base

block content
    .user-page-wrapper
        include _userSettings
        .auth-content
            form.update-user-form
                h2.form-title #{title || 'Update Name'}
                br
                br
                br
                label.auth-errors
                div
                    label.user-current-name Name: #{user.name}
                br
                div
                    label New Name
                    input.text-input(type='text' name='name' required)
                div
                    button.btn.btn-big.update-user-btn Change Name